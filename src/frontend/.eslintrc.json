{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "nextjs"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "react/state-in-constructor": [2, "never"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["."]
      }
    }
  }
}